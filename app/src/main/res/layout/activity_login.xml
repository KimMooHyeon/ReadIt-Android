<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:src="@drawable/img_login_logo" />

    <LinearLayout
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="안녕하세요,"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="9dp"
            android:text="리딧에서 콘텐츠를 저장해보세요."
            android:textColor="#000000"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="101dp">

            <EditText
                android:id="@+id/edt_login_id"
                android:layout_width="306.5dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="example@readit.com"
                android:paddingRight="20dp"
                android:paddingBottom="11.5dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_circleID"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_circle_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="이메일"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dp">

            <EditText
                android:id="@+id/edt_login_pw"
                android:layout_width="306.5dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="영어, 숫자 조합 8-12자리"
                android:inputType="textPassword"
                android:paddingRight="20dp"
                android:paddingBottom="11.5dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_circlePW"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_circle_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="비밀번호"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="184dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:textColor="#f15642"
            android:textSize="10sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/btn_submitLogin"
                android:layout_width="315dp"
                android:layout_height="42dp"
                android:src="@drawable/btn_login_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold
" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>


        </FrameLayout>


        <TextView
            android:id="@+id/txt_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="66dp"
            android:text="회원가입"
            android:textColor="#000000" />


    </LinearLayout>


</RelativeLayout>