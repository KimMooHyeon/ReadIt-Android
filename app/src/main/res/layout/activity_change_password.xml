<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/mypage_change_password_back_btn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/mypage_change_password_back_btn"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:text="비밀번호 변경"
            android:textColor="#191919"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="기존 비밀번호"
        android:textColor="#191919"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edt_original_password"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="145dp"
        android:background="@null"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:hint="기존 비밀번호를 입력해주세요"
        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:lineSpacingExtra="6sp"
        android:textColor="#d8d8d8"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_original_password"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="206dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="새 비밀번호"
        android:textColor="#191919"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="236dp"
        android:background="@null"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:hint="영어,숫자 조합 8~12자리"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:maxLength="12"
        android:textColor="#d8d8d8"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_new_password"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="297dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="새 비밀번호 재입력"
        android:textColor="#191919"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edt_password_confirm"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="327dp"
        android:background="@null"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:hint="비밀번호를 다시 입력해주세요."
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:textColor="#d8d8d8"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_password_confirm"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_red_border_change_profile"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="7sp"
            android:text="완료"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>