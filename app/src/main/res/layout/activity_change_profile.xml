<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangeProfileActivity">

    <ImageView
        android:id="@+id/iv_changeProfile_back_btn"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_back"
        android:layout_width="38dp"
        android:layout_height="38dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_change_profile_btn"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="132dp"
        android:layout_gravity="center"
        android:src="@drawable/img_9076_2"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <TextView
        android:layout_marginTop="309dp"
        android:layout_marginLeft="45dp"
        android:textColor="#8d8d8d"
        android:lineSpacingExtra="6sp"
        android:textSize="12sp"
        android:text="닉네임"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.computer.inu.readit_appjam.ClearEditText
        android:layout_marginTop="340dp"
        android:id="@+id/ced_change_profile_nickname"
        android:hint="져니"
        android:maxLength="5"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="37dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <LinearLayout
        android:layout_marginTop="452dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_red_border_change_profile"
        android:layout_width="320dp"
        android:layout_height="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff4106"
            android:text="완료"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>