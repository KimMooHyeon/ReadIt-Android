<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_category_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="31dp"
        android:background="@drawable/gradeation" />

    <ImageView
        android:id="@+id/iv_main_category_morebutton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_category_more" />
</FrameLayout>